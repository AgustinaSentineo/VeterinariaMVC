@model VeterinariaMVC.Entidades.ViewModels.Localidad.LocalidadEditViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm("Edit", "Localidad", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Localidad</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LocalidadId)
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.ProvinciaId)
                    @Html.DropDownListFor(model => model.ProvinciaId, new SelectList(Model.Provincia, "ProvinciaId", "NombreProvincia"), "Seleccione una Provincia", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProvinciaId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NombreLocalidad)
                    @Html.TextBoxFor(model => model.NombreLocalidad, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NombreLocalidad, "", new { @class = "text-danger" })
                </div>

            </div>

        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-warning" />
            @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-success" })
        </div>

    </div>
}
