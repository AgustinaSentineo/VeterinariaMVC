@model VeterinariaMVC.Entidades.ViewModels.Raza.RazaEditViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm("Edit", "Raza", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Raza</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RazaId)
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoDeMascotaId)
                    @Html.DropDownListFor(model => model.TipoDeMascotaId, new SelectList(Model.TipoDeMascota, "TipoDeMascotaId", "Descripcion"), "Seleccione un Tipo de Mascota", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TipoDeMascotaId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descripcion)
                    @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>

            </div>

        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-warning" />
            @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-success" })
        </div>

    </div>
}


