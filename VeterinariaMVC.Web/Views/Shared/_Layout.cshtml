<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Veterinaria", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Provincias", "Index", "Provincias")</li>
                    <li>@Html.ActionLink("Localidad", "Index", "Localidad")</li>
                    <li>@Html.ActionLink("Tipo De Documento", "Index", "TipoDeDocumento")</li>
                    @*<li>@Html.ActionLink("Cliente", "Index", "Cliente")</li>*@
                    <li>@Html.ActionLink("Proveedor", "Index", "Proveedor")</li>
                    <li class="nav-item active dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Mascotas
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Index","Mascota")">Mascota</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Raza")">Raza</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","TipoDeMascota")">Tipo de Mascota</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Cliente")">Clientes</a></li>
                        </ul>
                    </li>

                    <li class="nav-item active dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Staff
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Index","Empleado")">Empleados</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","TipoDeTarea")">Tipo de Tarea</a></li>
                        </ul>
                    </li>

                    <li class="nav-item active dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Alimentos
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Index","Alimento")">Alimento</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","TipoDeAlimento")">Tipo De Alimento</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","NecesidadEspecial")">Necesidad Especial</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Clasificacion")">Clasificacion</a></li>
                        </ul>
                    </li>
                    <li class="nav-item active dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Farmacia
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Index","Medicamento")">Medicamento</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","FormaFarmaceutica")">Formas Farmaceuticas</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Laboratorio")">Laboratorios</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","TipoDeMedicamento")">Tipo de Medicamento</a></li>
                        </ul>
                    </li>
                    <li class="nav-item active dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Tienda
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Index","Producto")">Producto</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","TipoDeProducto")">Tipo de Producto</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Marca")">Marca</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
