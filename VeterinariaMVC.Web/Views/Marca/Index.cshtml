@model IEnumerable<VeterinariaMVC.Entidades.ViewModels.Marca.MarcaListViewModel>
@{
    ViewBag.Title = "Index";
}
<div>
    <a href="@Url.Action("Create","Marca")" class="btn btn-primary" style="float: right">Nuevo</a>
    <h2>Lista de Marcas</h2>

</div>
<hr />
@if (TempData["Msg"] != null)
{
    var msg = TempData["Msg"].ToString();
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Éxito!</strong> @msg
    </div>

}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.MarcaId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.MarcaId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.MarcaId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

