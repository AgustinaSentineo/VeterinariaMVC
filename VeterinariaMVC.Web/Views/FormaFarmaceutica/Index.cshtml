@model IEnumerable<VeterinariaMVC.Entidades.ViewModels.FormaFarmaceutica.FormaFarmaceuticaListViewModel>

@{
    ViewBag.Title = "Index";
}
<div>
    <a href="@Url.Action("Create","FormaFarmaceutica")" class="btn btn-primary" style="float: right">Nuevo</a>
    <h2>Lista de Formas Farmaceuticas</h2>

</div>
<hr />
@if (TempData["Msg"] != null)
{
    var msg = TempData["Msg"].ToString();
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Éxito!</strong> @msg
    </div>

}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.FormaFarmaceuticaId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.FormaFarmaceuticaId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.FormaFarmaceuticaId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
