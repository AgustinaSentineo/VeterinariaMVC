@model IEnumerable<VeterinariaMVC.Entidades.ViewModels.Alimento.AlimentoListViewModel>

@{
    ViewBag.Title = "Index";
}
<div>
    <a href="@Url.Action("Create","Alimento")" class="btn btn-primary" style="float: right">
        Nuevo
    </a>
    <h2>Listado de Alimentos</h2>
</div>
@if (TempData["Msg"] != null)
{
    var msg = TempData["Msg"].ToString();
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Éxito!</strong> @msg
    </div>

}

<hr />
<div class="row">
    
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Clasificacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RangoEdad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecioVenta)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                <img src="@Url.Content($"~/Content/Imagenes/Alimentos/{item.Imagen}")" style="height: 60px" class="img-thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clasificacion)
            </td>

            <td style="width: 100px">
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RangoEdad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.AlimentoId }, new { @class = "btn btn-warning" }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.AlimentoId }, new { @class = "btn btn-info" }) |*@
                @Html.ActionLink("Borrar", "Delete", new { id = item.AlimentoId}, new { @class = "btn btn-danger" })
            </td>
        </tr>
            }

        </table>

    </div>

</div>

